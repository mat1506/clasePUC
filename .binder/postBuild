#!/bin/bash
# Registrar el kernel de R

set -e

R -q -e "IRkernel::installspec(user = TRUE)" || true
python -m ipykernel install --user --name clasePUC --display-name "Python (clasePUC)" || true

# Copiar el notebook de inicio solo si no existe en $HOME
if [ -f "inicio.ipynb" ] && [ ! -f "$HOME/inicio.ipynb" ]; then
  cp inicio.ipynb "$HOME/"
fi

echo "PostBuild listo."
